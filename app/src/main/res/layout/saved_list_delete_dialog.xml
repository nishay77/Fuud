<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saved_list_delete_text"
        android:text="Are you sure you \nwant to delete \nall saved recipes?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:text="Yes I am!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saved_list_delete_yes"
        android:textColor="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/saved_list_delete_text"
        android:layout_toRightOf="@+id/saved_list_delete_no"
        android:layout_toEndOf="@+id/saved_list_delete_no"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saved_list_delete_no"
        android:text="Ummm...no"
        android:textColor="@android:color/white"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_below="@+id/saved_list_delete_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>